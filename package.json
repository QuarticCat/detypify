{
    "name": "detypify",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "prettier --check .",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^3.0.1",
        "autoprefixer": "^10.4.16",
        "flowbite": "^2.3.0",
        "flowbite-svelte": "^0.44.24",
        "postcss": "^8.4.32",
        "postcss-load-config": "^5.0.2",
        "prettier": "^3.1.1",
        "prettier-plugin-svelte": "^3.1.2",
        "prettier-plugin-tailwindcss": "^0.5.9",
        "svelte": "^4.2.12",
        "tailwindcss": "^3.3.6",
        "vite": "^5.2.0"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 100,
        "plugins": [
            "prettier-plugin-svelte",
            "prettier-plugin-tailwindcss"
        ],
        "overrides": [
            {
                "files": "*.svelte",
                "options": {
                    "parser": "svelte"
                }
            }
        ]
    },
    "postcss": {
        "plugins": {
            "tailwindcss": {},
            "autoprefixer": {}
        }
    }
}
